{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "outDir": "./dist", // Let Webpack handle the output directory
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 